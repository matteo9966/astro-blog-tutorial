---
import Hamburger from "./Hamburger.astro";
---

<style>
  .navigation{
    display:flex;
    list-style: none;
    gap:10px;
    text-decoration: none;
    border-bottom: 1px solid gray;  
    flex:1;
}
  a{
    text-decoration: none;
    text-transform:uppercase;
  }

 li:hover{
    /* transform:scale(1.1); */
 }

 .container{
    container-name: header;
    container-type: inline-size;
    display:flex;
 }


 @container header (width>500px){
 .hamburger{
        display:none;
    }
 }


   .navigation{
       position: absolute;
       
       flex-direction: column;
       border:none;
       padding:10px;
       width:100%;
       background:white;
       top:5px;
       display:none;
   }

   .expanded{
     display:block;
   }


 @media screen (width > 500px){
    .navigation{
         position: static;
         display:block;
    }
 }

</style>
<div class="container">
    <div class="hamburger">

        <Hamburger></Hamburger>
    </div>
    <ul class="navigation" id="navigation">
        <span id="closebtn" >Chiudi</span>
        <li>
            <a href="/">Home</a>
            
        </li>
        <li>
    
            <a href="/about/">About</a>
        </li>
    </ul>

</div>
<script>
  document.querySelector('#closebtn')?.addEventListener('click',()=>{
    document.querySelector('.navigation')?.classList.toggle('expanded')
  })
  
  document.querySelector('.hamburger')?.addEventListener('click',()=>{
    document.querySelector('.navigation')?.classList.toggle('expanded')
  })

</script>